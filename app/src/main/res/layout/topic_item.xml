<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:background="@drawable/background"
        android:gravity="center"
        android:layoutDirection="rtl"
        android:orientation="vertical"
        android:paddingRight="5dp"
        android:textAlignment="center">
        <!--android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"-->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:background="#ffffff"
            android:gravity="center"
            android:layoutDirection="ltr"
            android:orientation="horizontal"
            android:paddingBottom="1dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:paddingTop="1dp"
            android:textAlignment="center">

            <TextView
                android:id="@+id/group_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/background_stroke"
                android:gravity="center"
                android:paddingLeft="0dp"
                android:text="Topic Title"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="30dp"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:layoutDirection="ltr"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="3dp"
            android:paddingTop="3dp">

            <ImageView
                android:id="@+id/fr_join"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/join_24"
                android:clickable="true"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <TextView
                android:layout_width="90dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:textSize="15dp"
                android:id="@+id/text_join"
                android:textStyle="italic"
                android:textColor="@android:color/black"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/fr_join"
                android:layout_toEndOf="@+id/fr_join"
                android:text="join"/>

            <ImageView
                android:id="@+id/fr_feed"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/comments_24"
                android:clickable="true"
                android:layout_alignTop="@+id/fr_join"
                android:layout_toRightOf="@+id/text_join"
                android:layout_toEndOf="@+id/text_join"
                android:layout_marginLeft="21dp"
                android:layout_marginStart="21dp" />
            <TextView
                android:layout_width="90dp"
                android:layout_height="20dp"
                android:textSize="15dp"
                android:textStyle="italic"
                android:layout_marginLeft="10dp"
                android:textColor="@android:color/black"
                android:layout_alignBottom="@+id/fr_feed"
                android:layout_toRightOf="@+id/fr_feed"
                android:layout_toEndOf="@+id/fr_feed"
                android:text="view feed"
                android:id="@+id/textView2" />
            <ImageView
                android:id="@+id/fr_leave"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/leave_24"
                android:clickable="true"
                android:layout_alignTop="@+id/fr_join"
                android:layout_toRightOf="@+id/textView2"
                android:layout_toEndOf="@+id/textView2"
                android:layout_marginLeft="19dp"
                android:layout_marginStart="19dp" />
            <TextView
                android:layout_width="90dp"
                android:layout_height="20dp"
                android:textSize="15dp"
                android:textStyle="italic"
                android:layout_marginLeft="10dp"
                android:textColor="@android:color/black"
                android:layout_alignBottom="@+id/fr_leave"
                android:layout_toRightOf="@+id/fr_leave"
                android:layout_toEndOf="@+id/fr_leave"
                android:text="leave"
                android:id="@+id/textView3"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>