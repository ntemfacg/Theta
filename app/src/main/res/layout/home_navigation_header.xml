<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="170dp"
    android:background="@drawable/bar_theme"
    android:paddingTop="15dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">

    <ImageView
        android:id="@+id/DrUserImage"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/bar_theme"
        android:padding="2dp"
        app:srcCompat="@drawable/circled_user48" />

    <TextView
        android:id="@+id/DrUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="name1"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textSize="17dp"
        android:layout_below="@+id/DrUserImage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/DrSecondName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="name2"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textSize="17dp"
        android:layout_below="@+id/DrUserImage"
        android:layout_toRightOf="@+id/DrUsername"
        android:layout_toEndOf="@+id/DrUsername"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp" />

    <TextView
        android:id="@+id/DrEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="email address"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textSize="17dp"
        android:layout_below="@+id/DrUsername"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>