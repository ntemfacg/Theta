<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="170dp"
    android:background="@drawable/header_bg"
    android:padding="20dp">

    <ImageView
        android:id="@+id/DrUserImage"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="5dp"
        app:srcCompat="@drawable/circled_user48" />

    <TextView
        android:id="@+id/DrUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="username"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textSize="17dp"
        android:layout_below="@+id/DrUserImage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/DrEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="email address"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textSize="17dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>